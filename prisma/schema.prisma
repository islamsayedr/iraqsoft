
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id    String   @id @default(cuid())
  name   String
  password   String
  email  String @unique
  role   Role    @default(USER)
  updates Updates[]
  systems systems[]
}
model Updates {
  id    String   @id @default(cuid())
  title String
  des String
  createdAt DateTime @default(now())
  cover String
  video String

  author User   @relation(fields: [userId], references: [id])
  userId String
}
model systems {
  id    String   @id @default(cuid())
  title String
  des String
  createdAt DateTime @default(now())
  cover String
  price Int
  platforms Platform[]  // platforms
  landingLink String
  author User   @relation(fields: [userId], references: [id])
  userId String
}
enum Role {
  USER
  ADMIN
}
enum Platform {
  WINDOWS
  MAC
  LINUX
  WEB
  ANDROID
  IOS
}